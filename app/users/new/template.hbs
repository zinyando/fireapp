<h1>New User</h1>

<form role="form">
  <div class="row form-group">
    <div class="col-md-3">
      <label>First Name</label>
    </div>
    <div class="col-md-9">
      {{input type="text" value=firstName class="form-control" size="50"}}
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-3">
      <label>Last Name</label>
    </div>
    <div class="col-md-9">
      {{input type="text" value=lastName class="form-control" size="50"}}
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-3">
      <label>Age</label>
    </div>
    <div class="col-md-9">
      {{input type="text" value=age class="form-control" size="50"}}
    </div>
  </div>
  <div class=>
  <button {{action 'saveUser'}} class="btn btn-primary">Save</button>
</div>
</form>
